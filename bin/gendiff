#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

use function App\Parsers\parseFile;
use function App\Parser\readFile;

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}


$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$args = Docopt::handle($doc, ['version' => '1.0.0']);

if ($args['--help']) {
    echo $doc;
    exit(0);
}

if ($args['--version']) {
    echo '1.0.0' . PHP_EOL;
    exit(0);
}

$firstFile = $args['<firstFile>'];
$secondFile = $args['<secondFile>'];
$format = $args['--format'];

try {
    $data1 = parseFile($firstFile);
    $data2 = parseFile($secondFile);

    echo "First file contents:\n";
    print_r($data1);
    echo "\nSecond file contents:\n";
    print_r($data2);
    echo "\n";
    
    echo "Format: {$format}\n";
    echo "Comparison logic will be implemented here\n";

} catch (Exception $e) {
    echo "Error: " . $e->getMessage() . PHP_EOL;
    exit(1);
}